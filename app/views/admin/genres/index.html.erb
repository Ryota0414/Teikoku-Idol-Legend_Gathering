<div class="container">
  <h1>アイドル一覧</h1>

  <div class="mb-3">
    <%= link_to 'アイドルの登録', new_admin_genre_path, class: "btn btn-info mb-3" %>
    <div class="row">
      <% @genres.each do |genre| %>
        <div class="col-md-2 text-center mb-3">
          <%= link_to admin_genre_path(genre) do %>
            <% if genre.genre_image.attached? %>
              <%= image_tag genre.genre_image.variant(resize_to_limit: [100, 100]), class: "img-thumbnail mb-2" %>
            <% else %>
              <p>No Image Available</p>
            <% end %>
          <% end %>
          <h5><%= link_to genre.name, admin_genre_path(genre), class: 'd-block text-decoration-none' %></h5>
          <div>
            <%= link_to 'アイドルの編集', edit_admin_genre_path(genre), class: 'btn btn-sm btn-outline-secondary me-2' %>
            <%= link_to 'アイドルの削除', admin_genre_path(genre), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
