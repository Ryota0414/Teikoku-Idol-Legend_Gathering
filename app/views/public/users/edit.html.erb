<div class="container">
  <div class="row">
    <div class="col">
      <h4>会員情報編集</h4>
      <div class="row">
        <div class="col-md">
          <% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: @user do |f| %>
            <table class="table">
              <tr>
                <td style="width: 30%; padding-left: 20px;">名前</td>
                <td><%= f.text_field :name %></td>
              </tr>
              <tr>
                <td style="width: 30%; padding-left: 20px;">メールアドレス</td>
                <td><%= f.text_field :email %></td>
              </tr>
              <tr>
                <td style="width: 30%; padding-left: 20px;">プロフィール画像</td>
                <td><%= f.file_field :profile_image, accept: "image/*" %>  </td>
              </tr>
              <tr>
                <td style="width: 30%; padding-left: 20px;">自己紹介文</td>
                <td><%= f.text_area :bio, rows: 10, style: "width: 100%;" %></td>
              </tr>
            </table>

            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
            <%= link_to "退会する", users_check_path, class:"btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>