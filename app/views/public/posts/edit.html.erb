<div class="container">
  <div class="row">
    <div class="col">
      <h4>投稿編集</h4>
      <div class="row">
        <div class="col-md">
          <% if @post.errors.any? %>
            <%= @post.errors.count %>件のエラーが発生しました
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: @post do |f| %>
            <table class="table">
              <tr>
                <td style="width: 30%; padding-left: 20px;">タイトル</td>
                <td><%= f.text_field :title %></td>
              </tr>
              <tr>
                <td style="width: 30%; padding-left: 20px;">本文</td>
                <td><%= f.text_field :body %></td>
              </tr>
            </table>

            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
